{
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended"
    ],
    "ignore": [
        "dist"
    ],
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "no-var": 2,
        "prefer-const": 2,
        "no-const-assign": 2
    }
}